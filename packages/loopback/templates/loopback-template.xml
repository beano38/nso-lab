<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">


    <!-- **************** XR Config **************** -->
      <device>
      <name>{device}</name>
      <config>
        <interface xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <Loopback>
            <id>{intf-number}</id>
            <description>{description}</description>
            <ipv4>
              <address>
                <ip>{ipv4_address}</ip>
                <mask>{ipv4_mask}</mask>
              </address>
            </ipv4>
            <ipv6>
              <address>
                <prefix-list>
                  <prefix>{ipv6_address}/{ipv6_length}</prefix>
                </prefix-list>
              </address>
            </ipv6>
          </Loopback>
        </interface>
      </config>
    </device>

  <!-- **************** End XR Config **************** -->

  <!-- **************** XE Config **************** -->
  
    <device>
      <name>{device}</name>
      <config>
        <interface xmlns="urn:ios">
          <Loopback>
            <name>{intf-number}</name>
            <description>{description}</description>
            <ip>
              <address>
                <primary>
                  <address>{ipv4_address}</address>
                  <mask>{ipv4_mask}</mask>
                </primary>
              </address>
            </ip>
            <ipv6>
              <address>
                <prefix-list>
                  <prefix>{ipv6_address}/{ipv6_length}</prefix>
                </prefix-list>
              </address>
            </ipv6>
          </Loopback>
        </interface>
      </config>
    </device>

  <!-- **************** End XE Config **************** -->
  </devices>
</config-template>

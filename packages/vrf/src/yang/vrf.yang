module vrf {
  namespace "http://com/example/vrf";
  prefix vrf;

  import ietf-inet-types { prefix inet; }
  import tailf-common { prefix tailf; }
  import tailf-ncs { prefix ncs; }

  description
    "Simple package to create a VRF instance";

  revision 2019-07-08 {
    description
      "Initial revision.";
  }

  grouping vrf_conf {

    leaf vrf_name {
      tailf:info "Name of VRF Instance";
      mandatory true;
      type string;
    }
    leaf description {
      tailf:info "Description of VRF";
      type string;
    }
  }

  list vrf {
    key name;

    uses ncs:service-data;
    ncs:servicepoint "vrf";

    leaf name {
      type string;
    }

    leaf my_bgp_as {
      tailf:info "VRF BGP AS Number <1-65534>";
      type uint16 {
        range "1..65534";
      }
    }
    leaf my_vrf_community {
      tailf:info "VRF Community Number <1-65534>";
      type uint32 {
        range "1..65534";
      }
    }

    list v4_imports{
      key vrf_community;

      leaf bgp_as {
        tailf:info "VRF BGP AS Number <1-65534>";
        type uint16 {
          range "1..65534";
        }
      }

      leaf vrf_community {
        tailf:info "VRF Community Number <1-65534>";
        type uint32 {
          range "1..65534";
          // really range is 0 to 4,294,967,295
        }
      }
    }

    // may replace this with other ways of refering to the devices.
    leaf-list device {
      type leafref {
        path "/ncs:devices/ncs:device/ncs:name";
      }
    }

    uses vrf:vrf_conf;
  }
}

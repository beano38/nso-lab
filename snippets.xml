<config xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>EVPN-PE0-RTR</name>
      <config>
        <router xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <bgp>
            <bgp-no-instance>
              <id>65000</id>
              <vrf>
                <name>PON_INTERNET</name>
                <rd>auto</rd>
                <address-family>
                  <ipv4>
                    <unicast>
                      <label>
                        <mode>
                          <per-vrf/>
                        </mode>
                      </label>
                      <redistribute>
                        <connected/>
                        <static/>
                      </redistribute>
                    </unicast>
                  </ipv4>
                </address-family>
              </vrf>
              <vrf>
                <name>PON_VIDEO</name>
                <rd>auto</rd>
                <address-family>
                  <ipv4>
                    <unicast>
                      <label>
                        <mode>
                          <per-vrf/>
                        </mode>
                      </label>
                      <redistribute>
                        <connected/>
                        <static/>
                      </redistribute>
                    </unicast>
                  </ipv4>
                </address-family>
              </vrf>
              <vrf>
                <name>PON_VOICE</name>
                <rd>auto</rd>
                <address-family>
                  <ipv4>
                    <unicast>
                      <label>
                        <mode>
                          <per-vrf/>
                        </mode>
                      </label>
                      <redistribute>
                        <connected/>
                        <static/>
                      </redistribute>
                    </unicast>
                  </ipv4>
                </address-family>
              </vrf>
            </bgp-no-instance>
          </bgp>
        </router>
      </config>
    </device>
  </devices>
</config>